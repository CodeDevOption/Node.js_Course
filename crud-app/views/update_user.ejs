<!-- 
    # Header Section
-->
<%- include('./include/_header') -%>

        <!-- Main Section -->
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                   <div class="filter">

                       <a href="/" class="text-gradient"> <i class="fas fa-angle-double-left"></i> All Users</a>
                   </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">Update User</h2>
                    <span class="text-light">Use the below form to update an account</span>
                </div>

                <!-- 
                    # Form Section
                -->

                  <!-- Form Handling -->
                  <form method="POST" id="update_user">
                    <div class="new_user">
                        <div class="form-group">
                            <label for="name" class="text-light">Name</label>
                            <input type="hidden" name="id" value="<%=user._id%>">
                            <input value="<%=user.name%>" type="text" name="name" placeholder="Lahiru Sadaruwan">
                        </div>
                        <div class="form-group">
                            <label for="email" class="text-light">Email</label>
                            <input type="email" name="email" value="<%=user.email%>" placeholder="example@gmail.com">
                        </div>
                        <div class="form-group">
                            <label for="gender" class="text-light">Gender</label>
                            <div class="radio inline">
                                <input type="radio" id="radio-01" name="gender" value="Male" <%= user.gender == 'Male'?'checked':''%> >
                                <label for="radio-01"  class="radio-label">Male</label>

                            </div>
                            <div class="radio inline">
                                <input id="radio-02" <%= user.gender == 'Fimale'?'checked':''%> type="radio" name="gender" value="Fimale">
                                <label for="radio-02" class="radio-label">Fimale</label>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Status" class="text-light">Status</label>
                            <div class="radio inline">
                                <input id="radio-03" type="radio" <%= user.status == 'Active'?'checked':''%>  name="status" value="Active" >
                                <label for="radio-03"  class="radio-label">Active</label>

                            </div>
                            <div class="radio inline">
                                <input id="radio-04"  type="radio" <%= user.status == 'Inactive'?'checked':''%> name="status" value="Inactive">
                                <label for="radio-04" class="radio-label">Inactive</label>

                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn text-dark">Save</button>
                        </div>
                    </div>
                </form>
                <!-- /Form Handling -->%>
                

            </div>
        </main>
        <!-- /Main Section -->

<!-- 
    # Footer Section
-->
<%- include('./include/_footer') -%>